---
import { Image } from "astro:assets";
import relaxImg from "../../public/relax.png";
import fitnessPersonImg from "../../public/fitnessperson.png";

interface FeatureProps {
  title: string;
  description: string;
  imageUrl: ImageMetadata;
  imageAlt: string;
  isReversed?: boolean;
}

const features: FeatureProps[] = [
  {
    title: "Work out at home for free.",
    description:
      "We believe fitness should be accessible to everyone, everywhere, regardless of income or access to a gym. With hundreds of professional workouts, healthy recipes and informative articles, as well as one of the most positive communities on the web, you'll have everything you need to reach your personal fitness goals â€“ for free!",
    imageUrl: relaxImg,
    imageAlt: "Person working out at home",
  },
  {
    title: "Get more with low-cost training programs and advanced features.",
    description:
      "Take your fitness journey to the next level with our affordable training programs and advanced features. Designed for those who want to push their limits, our premium offerings provide personalized guidance, in-depth analytics, and exclusive content to help you achieve your goals faster and more effectively.",
    imageUrl: fitnessPersonImg,
    imageAlt: "Person using advanced fitness features on a device",
    isReversed: true,
  },
];
---

<section class="features">
  {
    features.map((feature, index) => (
      <div class={`feature ${feature.isReversed ? "feature--reversed" : ""}`}>
        <div class="feature__content">
          <h2 class="feature__title">{feature.title}</h2>
          <p class="feature__description">{feature.description}</p>
          <button class="feature__button">
            See More
            <img
              src="/arrowright.png"
              alt="Arrow right"
              class="feature__button-icon"
              loading="lazy"
            />
          </button>
        </div>
        <div class="feature__image-wrapper">
          <Image
            src={feature.imageUrl}
            alt={feature.imageAlt}
            class={`feature__image feature__image-${index}`}
          />
        </div>
      </div>
    ))
  }
</section>

<style>
  @media (min-width: 1440px) {
    .features {
      display: flex;
      flex-direction: column;
      padding: 1rem;
      margin: auto;
      gap: 100px;
    }

    .feature {
      display: flex;
      justify-content: space-around;
      align-items: center;
      margin-bottom: 2rem;
    }

    .feature--reversed {
      flex-direction: row-reverse;
    }

    .feature__content {
      width: auto;
    }

    .feature__title {
      font-size: 40px;
      line-height: 50px;
      color: var(--color-white);
      width: 591px;
    }

    .feature__description {
      font-size: 14px;
      line-height: var(--line-height-description);
      color: var(--color-light-gray);
      width: 480px;
    }

    .feature__image-0,
    .feature__image-1 {
      object-fit: cover;
      border-radius: 12px;
    }

    .feature__image-0 {
      width: 640px;
      height: 539px;
    }

    .feature__image-1 {
      width: 560px;
      height: 510px;
    }

    .feature__button {
      background-color: transparent;
      color: #0070c9;
      font-size: var(--font-size-description);
      line-height: 26px;
      border: none;
      font-weight: 600;
      display: flex;
      width: 110px;
      align-items: center;
      justify-content: space-between;
      transition: var(--transition-ease);
    }

    .feature__button:hover {
      color: #005b8a;
      text-decoration: underline;
    }

    .feature__button:hover img {
      width: 20px;
      height: 20px;
      transform: translateX(5px);
    }

    .feature__button-icon {
      width: 20px;
      height: 20px;
    }
  }

  @media (max-width: 575px) {
    .features {
      display: flex;
      flex-direction: column;
      padding: 1rem;
    }

    .feature__title {
      font-size: 24px;
      line-height: 30px;
      color: var(--color-white);
    }

    .feature__description {
      font-size: 14px;
      line-height: var(--line-height-description);
      color: var(--color-light-gray);
    }

    .feature__button {
      background-color: transparent;
      color: #0070c9;
      font-size: var(--font-size-description);
      line-height: 26px;
      border: none;
      font-weight: 600;
      display: flex;
      width: auto;
      gap: 0.5rem;
      align-items: center;
      justify-content: space-between;
      transition: var(--transition-ease);
    }

    .feature__button:hover {
      color: #005b8a;
      text-decoration: underline;
    }

    .feature__button:hover img {
      width: 20px;
      height: 20px;
      transform: translateX(5px);
    }

    .feature__button-icon {
      width: 20px;
      height: 20px;
    }

    .feature__image-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      overflow-x: hidden;
      padding: 1rem 0;
    }

    .feature__image {
      width: 100%;
      height: auto;
      border-radius: var(--border-radius);
    }
  }
</style>
